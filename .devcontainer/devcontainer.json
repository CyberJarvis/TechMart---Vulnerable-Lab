{
  "name": "Vulnerable E-Commerce Lab",
  "image": "python:3.9-slim",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "postCreateCommand": "pip install -r requirements.txt && python init_db.py",
  "forwardPorts": [5002],
  "portsAttributes": {
    "5002": {
      "label": "Vulnerable Lab",
      "visibility": "private"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8"
      ]
    }
  },
  "remoteUser": "root"
}
